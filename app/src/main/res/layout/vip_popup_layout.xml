<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="22dp"
    android:background="#000000"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- ===================== -->
    <!-- Activation Status -->
    <!-- ===================== -->
    <TextView
        android:text="Activation Status :"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Status Box -->
    <TextView
        android:id="@+id/vip_status"
        android:text="Device belum diapprove. Kirim ID ke admin untuk requested access!"
        android:textSize="12sp"
        android:textColor="#000000"
        android:background="@drawable/device_id_box"
        android:padding="8dp"
        android:layout_marginTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="14dp" />

    <!-- ===================== -->
    <!-- Catatan -->
    <!-- ===================== -->
    <TextView
        android:text="Catatan :"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/vip_note"
        android:text="ℹ️ Untuk mendapatkan akses, silakan salin Device ID lalu kirim ke Admin. Akses akan aktif setelah disetujui."
        android:textSize="11sp"
        android:textColor="#CCCCCC"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="18dp" />

    <!-- ===================== -->
    <!-- Device ID -->
    <!-- ===================== -->
    <TextView
        android:text="Device ID Kamu :"
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!-- Device ID + Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Device ID Box -->
        <TextView
            android:id="@+id/vip_device_id"
            android:text="253267366"
            android:textSize="11sp"
            android:textColor="#333333"
            android:background="@drawable/device_id_box"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="34dp"
            android:layout_weight="1"/>

        <!-- ADMIN -->
        <Button
            android:id="@+id/btn_admin"
            android:text="ADMIN"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_purple_outline"
            android:layout_marginStart="8dp"
            android:layout_width="70dp"
            android:layout_height="34dp"
            android:padding="0dp"/>

        <!-- COPY ID -->
        <Button
            android:id="@+id/btn_copy"
            android:text="COPY ID"
            android:textSize="11sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_purple_outline"
            android:layout_marginStart="6dp"
            android:layout_width="74dp"
            android:layout_height="34dp"
            android:padding="0dp"/>

    </LinearLayout>

</LinearLayout>
